# React Environment Variables for API Configuration
# All variables must start with REACT_APP_ to be accessible in React

# API Base URLs
REACT_APP_API_BASE_URL=http://localhost:9090
REACT_APP_AUTH_SERVICE_URL=http://localhost:9090/auth-service
REACT_APP_PAYMENT_SERVICE_URL=http://localhost:9090/payment-service
REACT_APP_USER_SERVICE_URL=http://localhost:9090/user-service

# Authentication Configuration
REACT_APP_KEYCLOAK_URL=http://localhost:8080
REACT_APP_KEYCLOAK_REALM=inrex
REACT_APP_KEYCLOAK_CLIENT_ID=inrex-client

# API Endpoints
REACT_APP_AUTH_LOGIN_ENDPOINT=/api/v1/auth/login
REACT_APP_AUTH_LOGOUT_ENDPOINT=/api/v1/auth/logout
REACT_APP_AUTH_REFRESH_ENDPOINT=/api/v1/auth/refresh
REACT_APP_AUTH_VERIFY_ENDPOINT=/api/v1/auth/verify

# Development Settings
REACT_APP_ENVIRONMENT=development
REACT_APP_DEBUG_MODE=true
REACT_APP_LOG_LEVEL=debug
